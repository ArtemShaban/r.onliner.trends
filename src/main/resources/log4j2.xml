<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appenders>
    <console name="stdout" target="SYSTEM_OUT">
      <patternLayout pattern="%d{HH:mm:ss.SSS} [%thread] %-5level %logger:%L - %msg%n" />
    </console>
  </appenders>

  <loggers>
    <root level="info">
      <appenderRef ref="stdout" />
    </root>
  </loggers>
</configuration>